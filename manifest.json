{
  "manifest_version": 3,
  "name": "PR Review Guard",
  "version": "1.1.0",
  "version_name": "1.1.0 - Notification timer cooldown fix & multiple PR management",
  "description": "Prevents reflex approvals by enforcing a review cooldown on Azure DevOps pull requests.",
  "permissions": ["storage", "notifications", "alarms", "tabs"],
  "minimum_chrome_version": "100",
  "offline_enabled": true,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
	  "http://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
	"default_icon": {
	  "16": "icons/icon16.png",
	  "48": "icons/icon48.png",
	  "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://atgtfsapp01.alb.albarakatech.com:8080/*/_git/*/pullrequest/*",
	"http://atgisttfsapp04.alb.albarakatech.com:8080/*/_git/*/pullrequest/*",
	"http://atgtfsapp01:8080/*/_git/*/pullrequest/*",
	"http://10.54.59.23:8080/*/_git/*/pullrequest/*"
      ],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}


